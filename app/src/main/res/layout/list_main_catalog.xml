<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5_dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_catalogImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_190_dp"
                android:src="@drawable/ic_launcher_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_catalogName"
                android:layout_width="@dimen/dimen_190_dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-22dp"
                android:padding="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center"
                android:background="@color/default_ripple"
                android:text="test name"
                android:textColor="@color/black"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>